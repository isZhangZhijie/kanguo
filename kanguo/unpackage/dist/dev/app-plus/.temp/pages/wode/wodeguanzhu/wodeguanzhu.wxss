@import "../../../common/vendor.wxss";

.page {
  padding-top: 150rpx;
  height: 100%;
  background-color: #fff;
}
.header {
  width: 100%;
  position: fixed;
  top: 0;
  border-bottom: 1rpx solid #c9c9c9;
  background-color: #fff;
}
.info {
  position: relative;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.info text {
  position: relative;
}
.info .active {
  font-size: 50rpx;
  font-weight: bold;
}
.info .active::after {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20rpx;
  bottom: 0;
  width: 50rpx;
  height: 10rpx;
  background: #feda46;
  content: '';
}
.go-wode {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 30rpx;
  margin: auto;
  width: 40rpx;
}
.no-yonghu {
  padding-top: 250rpx;
  text-align: center;
}
.no-yonghu-text1 {
  font-size: 50rpx;
  color: #363636;
}
.no-yonghu-text2 {
  font-size: 36rpx;
  color: #363636;
}
.yonghu-num {
  text-align: center;
  color: #c9c9c9;
}
.msg-item {
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #c9c9c9;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.msg-item > image {
  width: 140rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.msg-detail {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  flex-grow: 1;
  display: block;
}
.msg-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
  color: #363636;
}
.msg-text {
  display: block;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  width: 100%;
}