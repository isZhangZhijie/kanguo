@import "../../common/vendor.wxss";

.container {
  background: #e6e6e6;
}
.top-bar {
  padding-top: 40rpx;
  position: relative;
  width: 100%;
  background: #fff;
  box-shadow: 0 10rpx 10rpx rgba(0,0,0,.2);
}
.search-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100rpx;
  height: 100rpx;
  z-index: 100;
}
.scroll-view-box {
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
}
.scroll-view-item {
  position: relative;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}
.scroll-view-item.active {
  font-size: 40rpx;
  font-weight: bold;
}
.scroll-view-item.active::after {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20rpx;
  bottom: 20rpx;
  width: 50rpx;
  height: 10rpx;
  background: #feda46;
  content: '';
}