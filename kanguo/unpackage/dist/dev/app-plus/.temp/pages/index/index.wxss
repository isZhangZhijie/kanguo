@import "../../common/vendor.wxss";

.container {
  padding-bottom: 150rpx;
  background: #e6e6e6;
}
.top-bar {
  padding-top: 40rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 10rpx 10rpx rgba(0,0,0,.2);
}
.search-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100rpx;
  height: 100rpx;
  z-index: 100;
}
.scroll-view-box {
  white-space: nowrap;
  width: 100%;
}
.scroll-view-item {
  position: relative;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}
.scroll-view-item.active {
  font-size: 40rpx;
  font-weight: bold;
}
.scroll-view-item.active::after {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20rpx;
  bottom: 20rpx;
  width: 50rpx;
  height: 10rpx;
  background: #feda46;
  content: '';
}
.video-list {
  padding-top: 140rpx;
}
._video {
  position: relative;
  z-index: -10;
  width: 100%;
}
.video-box {
  margin-bottom: 20rpx;
  background: #fff;
}
.author {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 20rpx 40rpx 0;
  margin-bottom: 10rpx;
}
.author-about {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.author-about image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.author-about .detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.author-about .detail .name {
  font-size: 32rpx;
  color: #363636;
}
.author-about .detail .time {
  font-size: 32rpx;
  color: #9c9c9c;
}
.author .right {
  width: 140rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 70rpx;
  background: #feda46;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 0 40rpx;
  margin-bottom: 15rpx;
}
.action-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 10rpx 0 20rpx;
}
.action-row > view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 32rpx;
}
.action-row > view image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}