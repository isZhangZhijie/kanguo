@import "../../common/vendor.wxss";

.top-box {
  position: fixed;
  width: 100%;
  background: #fff;
}
.search-box {
  padding: 50rpx 40rpx 0;
  margin-bottom: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 38rpx;
}
.search-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  flex-grow: 1;
  padding-left: 20rpx;
  margin-right: 20rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #c9c9c9;
  background: #f1f1f1;
}
.search-btn image {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.view-history {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #363636;
}
.view-history image {
  margin-right: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.sel-box {
  font-size: 32rpx;
  color: #363636;
}
.sel-row {
  white-space: nowrap;
  width: 100%;
  margin-bottom: 20rpx;
}
.sel-item {
  margin-left: 40rpx;
}
.sel-item:last-child {
  margin-right: 40rpx;
}
.sel-item.active {
  font-weight: bold;
  color: #ecbe07;
}
.img-list {
  padding: 500rpx 0 30rpx 40rpx;
  width: 100%;
  overflow: hidden;
}
.img-item {
  float: left;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  margin-right: 20rpx;
  margin-bottom: 25rpx;
  width: 210rpx;
}
.img-item:nth-of-type(3n) {
  margin-right: 0;
}
.img-item image {
  width: 100%;
}