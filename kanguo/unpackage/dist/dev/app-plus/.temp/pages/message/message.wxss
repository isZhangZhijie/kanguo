@import "../../common/vendor.wxss";

.top-bar {
  position: fixed;
  padding: 50rpx 40rpx 20rpx;
  border-bottom: 1px solid #c9c9c9;
  width: 100%;
  background: #fff;
}
.top-text {
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}
.msg-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  width: 100%;
}
.type-item {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.msg-num {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #fff;
  font-family: arial;
  background: #ff1d1d;
}
.type-item image {
  width: 120rpx;
}
.msg-list {
  padding-top: 320rpx;
  padding-bottom: 130rpx;
}
.msg-item {
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #c9c9c9;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  background: #fff;
}
.msg-item > image {
  width: 140rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.msg-detail {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  flex-grow: 1;
  display: block;
}
.msg-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
  color: #363636;
}
.msg-title .time {
  font-size: 30rpx;
  font-weight: normal;
  color: #c9c9c9;
}
.msg-text {
  display: block;
  width: 100%;
}