@import "../../../common/vendor.wxss";

.page {
  padding-top: 150rpx;
  height: 100%;
  background-color: #fff;
}
.header {
  width: 100%;
  position: fixed;
  top: 0;
  border-bottom: 1rpx solid #c9c9c9;
  background-color: #fff;
}
.info {
  position: relative;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.info text {
  position: relative;
}
.info .active {
  font-size: 50rpx;
  font-weight: bold;
}
.info .active::after {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20rpx;
  bottom: 0;
  width: 50rpx;
  height: 10rpx;
  background: #feda46;
  content: '';
}
.go-wode {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 30rpx;
  margin: auto;
  width: 40rpx;
}