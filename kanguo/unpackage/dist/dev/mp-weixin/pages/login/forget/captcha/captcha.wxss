@import "../../../../common/vendor.wxss";

.container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.login-page-top {
  padding-top: 80rpx;
}
.phone-num {
  width: 80%;
  margin-bottom: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.phone-num image {
  width: 16px;
  margin-left: 5px;
}
.captcha-num {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  width: 80%;
  border: none;
}
.captcha-num ._input {
  width: 100rpx;
  height: 80rpx;
  -webkit-box-flex: 0;
  -webkit-flex-grow: 0;
  flex-grow: 0;
  border: none;
  padding-bottom: 10px;
  border-bottom: 1px solid #363636;
  text-align: center;
  font-size: 32px;
}
.captcha-num text {
  width: 100rpx;
  height: 80rpx;
  -webkit-box-flex: 0;
  -webkit-flex-grow: 0;
  flex-grow: 0;
  border: none;
  padding-bottom: 10px;
  border-bottom: 1px solid #363636;
  text-align: center;
  font-size: 32px;
}
.login-btn {
  width: 80%;
  height: 110rpx;
  line-height: 110rpx;
  margin-bottom: 10rpx;
  border: none;
  border-radius: 100rpx;
  background-color: #feda46;
  color: #363636;
  font-size: 38rpx;
  font-weight: bold;
}