
.footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: fixed;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  bottom: 0;
  padding: 5px 0;
  border-top: 1px solid #9c9c9c;
  width: 100%;
  background: #fff;
  z-index: 10000;
}
.footer>view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: #9c9c9c;
}
.footer image {
  width: 60rpx;
  height: 60rpx;
}
.footer .fabu {
  display: block;
  width: 50rpx;
  height: 50rpx;
}
.fabu image {
  position: absolute;
  top: -35rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 150rpx;
  height: 150rpx;
}